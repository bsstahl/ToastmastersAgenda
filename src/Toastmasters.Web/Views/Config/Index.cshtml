@{
    ViewData["Title"] = "Configuration";
}

<h2>Configuration</h2>
<h4>Store Config in Browser</h4>
<hr />
<h5 class="alert-danger">@ViewData["ErrorMessage"]</h5>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <div><textarea name="config" cols="60" rows="10">@ViewData["ConfigJson"]</textarea></div>
                <div><input type="submit" value="Store" class="btn btn-default" /></div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Agenda" asp-action="Index">Back to Agenda</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
